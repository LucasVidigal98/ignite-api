{
  "compilerOptions": {
    "target": "es5",                                  
    "module": "commonjs",                               
    "baseUrl": "./src",                                  
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },                                    
    "esModuleInterop": true,                                 
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,              
    "skipLibCheck": true,                               
    "resolveJsonModule": true
  }
}
